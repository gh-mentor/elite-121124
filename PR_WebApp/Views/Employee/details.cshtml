@model PR_WebApp.Models.EmployeeDetailsViewModel

@using PR_WebApp.Models;

<h2>Employee Details</h2>

<div>

    @if (Model.Employee is PayrollLibrary.HourlyEmployee)
    {
        <h4 id="caption_typeof_employee">Hourly Employee</h4>
    }
    else if (Model.Employee is PayrollLibrary.SalariedEmployee)
    {
        <h4 id="caption_typeof_employee">Salaried Employee</h4>
    }
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Department
        </dt>
        <dd class="col-sm-10">
            @Model.Department?.Name 
        </dd>

        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Employee?.Name 
        </dd>

        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Model.Employee?.Email 
        </dd>

        <dt class="col-sm-2">
            Mobile
        </dt>
        <dd class="col-sm-10">
            @Model.Employee?.Mobile
        </dd>

        @if (Model.Employee is PayrollLibrary.HourlyEmployee hourlyEmployee)
        {
            <dt class="col-sm-2" id="caption_hourly_rate">
                Hourly Rate
            </dt>
            <dd class="col-sm-10" id="hourly_rate">
                @hourlyEmployee?.HourlyRate.ToString("C2", new System.Globalization.CultureInfo("en-US"))
            </dd>
            <dt class="col-sm-2" id="caption_hours_worked">
                Hours Worked
            </dt>
            <dd class="col-sm-10" id="hours_worked">
                @hourlyEmployee?.HoursWorked.ToString("F2")
            </dd>
        }
        else if (Model.Employee is PayrollLibrary.SalariedEmployee salariedEmployee)
        {
            <dt class="col-sm-2">
                Weekly Salary
            </dt>

            <dd class="col-sm-10">
                 @salariedEmployee.WeeklySalary.ToString("C2", new System.Globalization.CultureInfo("en-US"))
            </dd>

        }

        <dt class="col-sm-2">
            Payment
        </dt>
        <dd class="col-sm-10" id="pay">
            @Model.Employee?.Payment.ToString("C2", new System.Globalization.CultureInfo("en-US"))
        </dd>


    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { /* id = Model.Employee.PrimaryKey */ }) |
    @Html.ActionLink("Back to List", "Index")
</p>
